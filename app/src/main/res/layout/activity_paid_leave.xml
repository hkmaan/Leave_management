<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Paid_leave">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/casual_leave"
        android:scaleType="centerCrop"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0E0D0D"></View>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:src="@drawable/back"
        android:padding="5dp"
        android:onClick="oback"
        ></ImageView>



    <TextView
        android:id="@+id/paid_leave"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Paid Leave"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="#0DE9A7"
        android:textSize="35dp"
        android:textAlignment="center"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/paid_leave"
        android:background="#AD080808"
        ></View>
    <TextView
        android:id="@+id/subject2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0DE9A7"
        android:textSize="20dp"
        android:layout_below="@+id/paid_leave"
        android:text="Subject: Personal Leave Application for a Day"
        android:layout_margin="5dp"
       />
    <TextView
        android:id="@+id/Mr2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Respected Mr./Mrs.,"
        android:textSize="20dp"
        android:textColor="#0DE9A7"
        android:layout_below="@id/subject2"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am writing this letter to inform you that I need to take a day of absence on the"
        android:textColor="#0DE9A7"
        android:textSize="20dp"
        android:layout_below="@+id/Mr2"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:textColor="#0DE9A7"
        android:textSize="20dp"
        android:layout_below="@+id/txt"/>
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt1"
        android:layout_below="@+id/txt"
        android:text="  of this month.Because of some "
        android:textSize="20dp"
        android:textColor="#0DE9A7"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="personal work. I will be back in the office the next day in the morning without fail."
        android:textSize="20dp"
        android:textColor="#0DE9A7"
        android:layout_below="@+id/txt2"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can contact me at my number in case of questions or clarifications. I have emailed you a copy of the work plan for the day I plan to take leave. I am sure the team will handle everything perfectly during my absence."
        android:textSize="20dp"
        android:textColor="#0DE9A7"
        android:layout_below="@+id/txt3"/>
    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#0DE9A7"
        android:layout_below="@+id/txt4"
        android:layout_margin="5dp"
        android:text="I apologise for any inconvenience caused due to my absence and hope that you will understand my situation."/>
<TextView
    android:id="@+id/txt6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:textColor="#0DE9A7"
    android:layout_below="@+id/txt5"
    android:text="Sincerely,"
    android:layout_margin="5dp"
    />
<TextView
    android:id="@+id/txt7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:textColor="#0DE9A7"
    android:layout_below="@+id/txt6"
    android:text="name"
    />
</RelativeLayout>