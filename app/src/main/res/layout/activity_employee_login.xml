<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Employee_login">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login"
        android:scaleType="centerCrop"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C6080808"
        />
    <ImageView
        android:id="@+id/employee"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/workersteam"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"/>
    <TextView
        android:id="@+id/employeetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMPLOYEE LOGIN"
        android:textColor="#0DE9A7"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/employee"
        android:fontFamily=""
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/green_view"
        android:layout_below="@+id/employeetext"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="40dp"></View>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/male"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/employeetext"
        android:layout_marginTop="25dp"
        android:layout_marginRight="47dp"
        />
    <View
        android:id="@+id/whiteview"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/whitebutton"
        android:layout_below="@+id/employeetext"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="80dp"></View>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/employeetext"
        android:layout_marginTop="20dp"
        android:hint="Enter id"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:layout_marginRight="80dp"
        android:backgroundTint="#ffffff"
        />
    <Button
        android:id="@+id/nextbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/whiteview"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/green_view"
        android:text="next"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="italic"
        />

</RelativeLayout>