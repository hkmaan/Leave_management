<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_employee"
    android:id="@+id/e_drawer">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/login"
            android:scaleType="centerCrop"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:background="#C6080808" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/menu"
            android:layout_margin="10dp"
            android:id="@+id/navigationbar"
            android:onClick="Navigationbar"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/navigationbar"
            android:id="@+id/back_view1"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#C6080808"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:id="@+id/Leave_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply For Leave"
                android:textColor="#0DE9A7"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-smallcaps"/>
            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You haven't applied for any leave yet, if you want to apply,
 click the link below."
                android:textColor="#0DE9A7"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
              />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:textColor="#0DE9A7"
                    android:text="APPLY FOR LEAVE"
                    android:backgroundTint="#F44336"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="120dp"
                    android:onClick="apply_for_leave"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:id="@+id/back_view2"
            android:layout_width="match_parent"
            android:layout_height="350dp"
           app:cardBackgroundColor="#C6080808"
            app:cardCornerRadius="10dp"
            android:layout_below="@+id/back_view1"
            android:layout_margin="5dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <ViewFlipper
            android:id="@+id/flipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoStart="true"
            android:layout_toLeftOf="@id/calendarView">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vaisakhi"
                    android:scaleType="centerCrop"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#500DE9A7"
                    android:layout_alignParentBottom="true"></View>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/calendar"
                    android:layout_above="@+id/txtvaisakhi"
                    android:layout_toLeftOf="@+id/date1"
                    android:layout_marginBottom="3dp"/>
                <TextView
                    android:id="@+id/date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14 Sunday"
                    android:textColor="#000000"
                    android:layout_above="@+id/txtvaisakhi"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-smallcaps"/>
                <TextView
                    android:id="@+id/txtvaisakhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vaisakhi"
                    android:textColor="#000000"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginBottom="5dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="350dp"
                    android:src="@drawable/good_friday"
                    android:scaleType="centerCrop"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#500DE9A7"
                    android:layout_alignParentBottom="true"></View>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/calendar"
                    android:layout_above="@+id/txtgoodfriday"
                    android:layout_toLeftOf="@+id/date2"
                    android:layout_marginBottom="3dp"/>
                <TextView
                    android:id="@+id/date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19 Friday"
                    android:textColor="#000000"
                    android:layout_above="@+id/txtgoodfriday"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-smallcaps"/>
                <TextView
                    android:id="@+id/txtgoodfriday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good Friday"
                    android:textColor="#000000"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginBottom="5dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="350dp"
                    android:src="@drawable/eid"
                    android:scaleType="centerCrop"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#500DE9A7"
                    android:layout_alignParentBottom="true"></View>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/calendar"
                    android:layout_above="@+id/txteid"
                    android:layout_toLeftOf="@+id/date3"
                    android:layout_marginBottom="3dp"/>
                <TextView
                    android:id="@+id/date3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 Wednesday"
                    android:textColor="#000000"
                    android:layout_above="@+id/txteid"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-smallcaps"/>
                <TextView
                    android:id="@+id/txteid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edi-ul-Fitar"
                    android:textColor="#000000"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginBottom="5dp"/>
            </RelativeLayout>
        </ViewFlipper>
        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/calendarView"
            android:background="@drawable/black_white_gradient"
            ></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Upcoming Holidays"
            android:textColor="#0DE9A7"
            android:textSize="12dp"
            android:fontFamily="sans-serif-smallcaps"

            />


                <TextView
                    android:id="@+id/month_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="April 2019"
                    android:textSize="20dp"
                    android:textColor="#0DE9A7"
                    android:layout_toRightOf="@+id/flipper"
                    android:layout_marginLeft="100dp"
                    />
                <LinearLayout
                    android:id="@+id/week"
                    android:layout_below="@+id/month_year"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@+id/flipper">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Su"
                        android:textSize="15dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#0DE9A7"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mo"
                        android:textSize="15dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#0DE9A7"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tu"
                        android:textSize="15dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#0DE9A7"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="We"
                        android:textSize="15dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#0DE9A7"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Th"
                        android:textSize="15dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#0DE9A7"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fr"
                        android:textSize="15dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#0DE9A7"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sa"
                        android:textSize="15dp"
                        android:layout_marginLeft="25dp"
                        android:textColor="#0DE9A7"/>
                </LinearLayout>

                <sun.bob.mcalendarview.views.ExpCalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="270dp"
                    android:layout_height="350dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/week"
                    />
                <View
                    android:layout_width="270dp"
                    android:layout_height="350dp"
                    android:layout_alignParentRight="true"
                    android:background="#49000000"></View>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/back_view3"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:cardBackgroundColor="#C6080808"
            app:cardCornerRadius="10dp"
            android:layout_below="@+id/back_view2"
            android:layout_margin="5dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="Leave_history">
            <lecho.lib.hellocharts.view.PieChartView
                android:id="@+id/chart"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentRight="true"
                />
                <TextView
                    android:id="@+id/text_leavebalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leave Balance"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#0DE9A7"
                    android:textSize="20dp"
                    android:layout_margin="5dp"/>
                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:layout_below="@id/text_leavebalance">
                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/greeen_view"
                    android:layout_margin="5dp"
                    ></View>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Casual Leave"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textColor="#0DE9A7"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:layout_below="@id/linear1">
                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/cyan_view"
                        android:layout_margin="5dp"
                        ></View>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paid Leave"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textColor="#0DE9A7"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:layout_below="@id/linear2">
                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/blue_view"
                        android:layout_margin="5dp"
                        ></View>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sick Leave"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textColor="#0DE9A7"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:layout_below="@id/linear3">
                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/magenta_view"
                        android:layout_margin="5dp"
                        ></View>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other Leaves"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textColor="#0DE9A7"/>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#000000"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/e_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#0DE9A7"
                android:src="@drawable/image"
                />
            <TextView
                android:id="@+id/e_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee name"
                android:textSize="20dp"
                android:textColor="#0DE9A7"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="sans-serif-smallcaps"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="#DF000000"
            android:onClick="ehome"
            >
            <ImageView
                android:id="@+id/ihome"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/home"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/thome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:layout_marginTop="20dp"
                android:textColor="#0DE9A7"
                android:textSize="25dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#E4000000"
            android:onClick="geo_attendance"
            >
            <ImageView
                android:id="@+id/igeoAttendance"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/attendance"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:id="@+id/tgeoattendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geo Mark Attendance"
                android:textColor="#0DE9A7"
                android:layout_marginTop="20dp"
                android:textSize="25dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="#E4121111"
            android:layout_marginRight="50dp"
            android:onClick="emy_profile"
            >
            <ImageView
                android:id="@+id/imyprofile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/myprofile"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:id="@+id/tmyprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textColor="#0DE9A7"
                android:layout_marginTop="20dp"
                android:textSize="25dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="#E41B1B1B"
            android:layout_marginRight="100dp"
            android:onClick="Requested_leave">
            <ImageView
                android:id="@+id/irequest"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/i_icon"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requested Leave"
                android:textColor="#0DE9A7"
                android:layout_marginTop="20dp"
                android:textSize="25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="#E42D2C2C"
            android:layout_marginRight="140dp"
            android:onClick="settings">
            <ImageView
                android:id="@+id/isetting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/setting"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/tsetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:textSize="25dp"
                android:textColor="#0DE9A7"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="#E4403E3E"
            android:layout_marginRight="180dp"
            android:onClick="logout">
            <ImageView
                android:id="@+id/ilogout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logout"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/tlogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="25dp"
                android:textColor="#0DE9A7"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>